<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.09"
            android:orientation="horizontal"
            android:background="@drawable/wood_texture">
            <ImageView
                android:id="@+id/pause1"
                android:layout_weight="0.20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/pause"/>
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75">
                <LinearLayout
                    android:id="@+id/reserve1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:id="@+id/active1"
                android:layout_width="0dp"
                android:layout_weight="0.05"
                android:layout_height="match_parent"
                android:background="@color/inactive"
                android:orientation="horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            android:background="#3498db"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:background="@drawable/grass_texture">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/holo_green_dark">
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/wood_texture"
                android:id="@+id/board">

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-20dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@android:color/holo_green_dark">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            android:background="#e74c3c"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.09"
                android:orientation="horizontal"
                android:background="@drawable/wood_texture">
            <LinearLayout
                android:id="@+id/active2"
                android:layout_weight="0.05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/inactive"
                android:orientation="horizontal"/>
            <HorizontalScrollView
                android:layout_weight="0.75"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/reserve2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>
            <ImageView
                android:id="@+id/pause2"
                android:layout_weight="0.20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/pause"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/winPanel"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:padding="10dp"
        android:rotation="0"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/win" >
        <TextView
            android:text="@string/win"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold"
            android:id="@+id/textView" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pausePanel"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:padding="10dp"
        android:rotation="0"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/win" >
        <TextView
            android:text="@string/pause"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold" />
    </LinearLayout>
</FrameLayout>
